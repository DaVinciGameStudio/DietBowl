<!DOCTYPE html>
<html>
<head>
    <title>Kalendarz</title>
    <style>
        #calendarContainer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 600px;
            margin: 0 auto;
            padding: 10px;
        }

        #calendar {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
        }

        .day {
            display: inline-block;
            width: 14.28%; /* One seventh of calendar width */
            padding: 10px;
            box-sizing: border-box;
            text-align: center;
            cursor: pointer;
            background-color: lightgray; /* Default grey background */
        }

            .day:hover {
                background-color: darkgray;
            }

        .navigationButton {
            cursor: pointer;
        }

        .hasDiet {
            background-color: lightgreen; /* Green color for days with a diet */
        }
    </style>
</head>
<body>
    <div id="calendarContainer">
        <button id="prevMonth" class="navigationButton">Poprzedni miesiąc</button>
        <div id="calendar"></div>
        <button id="nextMonth" class="navigationButton">Następny miesiąc</button>
    </div>

</body>
</html>
<script>
    let currentDate = new Date();

    document.addEventListener('DOMContentLoaded', function () {
        const calendar = document.getElementById('calendar');

        function renderCalendar() {
            const currentMonth = currentDate.getMonth();
            const currentYear = currentDate.getFullYear();
            const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();

            calendar.innerHTML = ''; // Clear previous content

            // Display the current month and year
            const monthYearDisplay = document.createElement('div');
            monthYearDisplay.style.textAlign = 'center';
            monthYearDisplay.style.width = '100%';
            monthYearDisplay.textContent = `${currentDate.toLocaleString('default', { month: 'long' })} ${currentYear}`;
            calendar.appendChild(monthYearDisplay);

            // Create the days of the month
            const dietDictionary = JSON.parse('@Html.Raw(Json.Serialize(ViewData["DietDictionary"]))');
            for (let day = 1; day <= daysInMonth; day++) {
                const dayElement = document.createElement('div');
                dayElement.classList.add('day');
                dayElement.textContent = day;

                // Ensure the month and day are two digits
                const monthString = String(currentMonth + 1).padStart(2, '0');
                const dayString = String(day).padStart(2, '0');
                const dateString = `${currentYear}-${monthString}-${dayString}T00:00:00`;

                if (dietDictionary[dateString]) {
                    dayElement.classList.add('hasDiet');
                }

                dayElement.addEventListener('click', function () {
                    const selectedDate = new Date(currentYear, currentMonth, day);
                    const localDate = new Date(selectedDate.getTime() - (selectedDate.getTimezoneOffset() * 60000)).toISOString().split("T")[0];
                    const userId = @ViewBag.userId;
                    const url = '/Dietitian/AddRecipeToDiet?userId=' + userId + '&data=' + localDate;
                    window.location.href = url;
                });

                calendar.appendChild(dayElement);
            }
        }

        document.getElementById('prevMonth').addEventListener('click', () => {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        });

        document.getElementById('nextMonth').addEventListener('click', () => {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        });

        renderCalendar();
    });

</script>