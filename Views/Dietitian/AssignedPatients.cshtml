@model IList<DietBowl.Models.User>

@{
    ViewData["Title"] = "Przypisani Pacjenci";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Count == 0)
{
    <p>Nie masz przypisanych żadnych pacjentów.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Wiek</th>
                <th>Płeć</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Age</td>
                    <td>@user.Sex</td>
                </tr>
            }
        </tbody>
    </table>
}