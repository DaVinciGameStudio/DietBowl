@model DietBowl.ViewModel.UserMacronutrientsVM

<link rel="stylesheet" href="~/css/editusermacro.css" asp-append-version="true" />
<br />
<br />
<div class="container">
    <div class="form-container">
        
        <form method="post">
            <div class="form-group">
                <label>Imię:</label>
                <p>@Model.FirstName</p>
            </div>
            <div class="form-group">
                <label>Nazwisko:</label>
                <p>@Model.LastName</p>
            </div>
            <div class="form-group">
                <label>Kalorie:</label>
                <p>@Model.Calories</p>
            </div>
            <div class="form-group">
                <label for="Protein">Białko (g):</label>
                <input type="text" class="form-control" id="Protein" name="Protein" value="@Model.Protein" />
            </div>
            <div class="form-group">
                <label for="Fat">Tłuszcze (g):</label>
                <input type="text" class="form-control" id="Fat" name="Fat" value="@Model.Fat" />
            </div>
            <div class="form-group">
                <label for="Carbohydrate">Węglowodany (g):</label>
                <input type="text" class="form-control" id="Carbohydrate" name="Carbohydrate" value="@Model.Carbohydrate" />
            </div>
            <button type="submit" class="btn btn-success">Zapisz zmiany</button>
        </form>
    </div>
</div>
