@using DietBowl.ViewModel
@model NutritionalRequirementsVM

<h2>Ustawienia zapotrzebowania kalorycznego i makroskładników</h2>

<form asp-action="SetNutritionalRequirements" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Calories">Kalorie</label>
        <input class="form-control" asp-for="Calories" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Protein">Białko</label>
        <input class="form-control" asp-for="Protein" />
        <span asp-validation-for="Protein" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fat">Tłuszcz</label>
        <input class="form-control" asp-for="Fat" />
        <span asp-validation-for="Fat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Carbohydrate">Węglowodany</label>
        <input class="form-control" asp-for="Carbohydrate" />
        <span asp-validation-for="Carbohydrate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
