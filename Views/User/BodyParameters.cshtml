@model List<DietBowl.Models.BodyParameter>

<h2>Parametry ciała</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Wzrost (cm)</th>
                <th>Waga (kg)</th>
                <th>BMI</th>
                <th>Data</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bodyParameter in Model)
            {
                <tr>
                    <td>@bodyParameter.Height</td>
                    <td>@bodyParameter.Weight</td>
                    <td>@Math.Round(bodyParameter.BMI, 3)</td>
                    <td>@bodyParameter.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (bodyParameter.Date.Date == DateTime.Now.Date)
                        {
                            <a href="@Url.Action("EditBodyParameter", "User", new { id = bodyParameter.Id })" class="btn btn-primary">Edytuj - prace w toku</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Brak danych o parametrach ciała.</p>
}