@model List<DietBowl.Models.BodyParameter>

<link rel="stylesheet" href="~/css/userbody.css" asp-append-version="true" />
<div>
    <h1 style="text-align:center">Parametry ciała</h1>
</div>
<br />
<br />
<br />
<div>
    <br />
</div>
<br />
<br />
<br />
<br />

@if (Model.Count > 0)
{
    <div class="filter">
        <br />
        <table>
            <tr>
                <th>Wzrost (cm)</th>
                <th>Waga (kg)</th>
                <th>BMI</th>
                <th>Data</th>
                <th>Akcje</th>
            </tr>

            @foreach (var bodyParameter in Model.OrderByDescending(bp => bp.Date))
            {
                <tr>
                    <td>@bodyParameter.Height</td>
                    <td>@bodyParameter.Weight</td>
                    <td>@Math.Round(bodyParameter.BMI, 3)</td>
                    <td>@bodyParameter.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (bodyParameter.Date.Date == DateTime.Now.Date)
                        {
                            <a href="@Url.Action("EditBodyParameter", "User", new { id = bodyParameter.Id })" class="btn btn-warning">Edytuj</a>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
}
else
{
    <p style="text-align:center">Brak danych o parametrach ciała.</p>
}
