@model BodyParameter

<link rel="stylesheet" href="~/css/edituser.css" asp-append-version="true" />
<br />
<br />
<h1 style="text-align:center">Edytuj parametry ciała</h1>
<br />
<br />
<body>
<div class="form-container" style="text-align:center;">
    <div class="form-inner">
<form asp-action="EditBodyParameter" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Height" class="control-label">Wzrost</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight" class="control-label">Waga</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <!-- Dodatkowe pola, jeśli są potrzebne -->

    <div class="form-group">
        <input type="submit" value="Zapisz zmiany" class="btn btn-success" />
    </div>
</form>
</div>
</div>
</body>